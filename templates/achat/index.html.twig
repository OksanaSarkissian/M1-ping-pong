{% extends 'base.html.twig' %}

{% block title %}Achat index
{% endblock %}

{% block body %}
	<div class="col-sm p-3 min-vh-100 d-flex flex-column align-items-center h-100 w-75">
		<div class="d-flex column-gap-5 pb-3">
			<a href="{{ path('app_devis_index') }}" class="btn bg-accent-2 text-primary">Devis</a>
			<a href="{{ path('app_commande_index') }}" class="btn bg-accent-2 text-primary">Commandes</a>
			<a href="{{ path('app_achat_index') }}" class="btn bg-accent text-secondary">Achats</a>
			<a href="{{ path('app_client_index') }}" class="btn bg-accent-2 text-primary">Clients</a>
			<a href="{{ path('app_fournisseur_index') }}" class="btn bg-accent-2 text-primary">Fournisseurs</a>
		</div>
		<div class="d-flex justify-content-between align-items-center w-100 mb-5 ">
			<a class="btn text-bg-accent-2 text-primary" href="{{ path('app_achat_new') }}">Cr√©er un achat</a>

			<h1>
				Achats
			</h1>
			<div class=""></div>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date</th>
					<th>Livraison_prevue</th>
					<th>Livraison_reelle</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for achat in achats %}
					<tr>
						<td>{{ achat.id }}</td>
						<td>{{ achat.date ? achat.date|date('Y-m-d') : '' }}</td>
						<td>{{ achat.livraisonPrevue ? achat.livraisonPrevue|date('Y-m-d') : '' }}</td>
						<td>{{ achat.livraisonReelle ? achat.livraisonReelle|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('app_achat_show', {'id': achat.id}) }}">
								<button class="btn text-bg-accent-2 text-primary">
									<i class="fa-solid fa-eye"></i>
								</button>
							</a>
							<a href="{{ path('app_achat_edit', {'id': achat.id}) }}">
								<button class="btn text-bg-accent-2 text-primary mx-3">
									<i class="fa-solid fa-pen"></i>
								</button>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	{% endblock %}
