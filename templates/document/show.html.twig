{% extends 'base.html.twig' %}

{% block title %}
  {{ documentType == 'devis' ? 'Devis' : 'Commandes' }}
{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center w-50">
    <a class="btn text-bg-accent-2 text-primary" href="{{ documentType == 'devis' ? path('app_devis_index') : path('app_commande_index') }}">back to list</a>
    <h1>{{ documentType == 'devis' ? 'Devis' : 'Commandes' }}</h1>
    <div class="d-flex">
      {% if document.delai == '' %}
        <a href="{{ path('app_document_edit', { id: document.id, variable: documentType }) }}"><button class="btn text-bg-accent-2 text-primary mx-3"><i class="fa-solid fa-pen"></i></button></a>
      {% endif %}
      {% if documentType == 'devis' %}
        {{ include('document/_delete_form.html.twig') }}
      {% endif %}
    </div>
  </div>

  <table class="table w-50">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ document.id }}</td>
      </tr>
      <tr>
        <th>Date</th>
        <td>{{ document.date ? document.date|date('d-m-Y H:i:s') : '' }}</td>
      </tr>
      <tr>
        <th>Type</th>
        <td>{{ document.type }}</td>
      </tr>
      <tr>
        <th>Montant_total</th>
        <td>{{ document.montantTotal }}</td>
      </tr>
      <tr>
        <th>Delai</th>
        <td>{{ document.delai ? document.delai|date('d-m-Y H:i:s') : '' }}</td>
      </tr>
    </tbody>
  </table>
{% endblock %}
