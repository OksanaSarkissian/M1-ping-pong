{% extends 'base.html.twig' %}

{% block title %}Droit index{% endblock %}

{% block body %}
    <h1>Droit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for droit in droits %}
            <tr>
                <td>{{ droit.id }}</td>
                <td>{{ droit.libelle }}</td>
                <td>
                    <a href="{{ path('app_droit_show', {'id': droit.id}) }}">show</a>
