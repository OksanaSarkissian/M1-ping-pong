{% extends 'base.html.twig' %}

{% block title %}Realisation index{% endblock %}

{% block body %}
    <h1>Realisation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Temps_reel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisation in realisations %}
            <tr>
                <td>{{ realisation.id }}</td>
                <td>{{ realisation.date ? realisation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ realisation.tempsReel ? realisation.tempsReel|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_realisation_show', {'id': realisation.id}) }}">show</a>
                    <a href="{{ path('app_realisation_edit', {'id': realisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_realisation_new') }}">Create new</a>
{% endblock %}
