{% extends 'fabrication-base.html.twig' %}

{% block title %}Realisation index{% endblock %}

{% block body %}
    <h1>Realisation index</h1>
<a href="{{ path('app_realisation_new') }}" class="btn bg-accent-2 text-primary">Create new</a>
    <table class="table w-100">
        <tbody>
        {% for realisation in realisations %}
            <div>
                <span>{{ realisation.date ? realisation.date|date('Y-m-d H:i:s') : '' }}</span>
                <span>{{ realisation.tempsReel ? realisation.tempsReel|date('H:i:s') : '' }}</span>
                <span>
                    <a href="{{ path('app_realisation_show', {'id': realisation.id}) }}"><button class="btn text-bg-accent-2 text-primary">
							<i class="fa-solid fa-eye"></i>
						</button></a>
                    <a href="{{ path('app_realisation_edit', {'id': realisation.id}) }}"><button class="btn text-bg-accent-2 text-primary mx-3">
							<i class="fa-solid fa-pen"></i>
						</button></a>
                </span>
            </div>
        {% else %}
            <tr>
                <span colspan="4" class="d-block mt-3">no records found</span>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
