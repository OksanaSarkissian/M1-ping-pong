{% extends 'base.html.twig' %}

{% block title %}Gamme
{% endblock %}

{% block body %}
	<h1>Gamme</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ gamme.id }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_gamme_index') }}">back to list</a>
	{% if gamme.responsable.id is same as(connectedUser) %}
		<a href="{{ path('app_gamme_edit', {'id': gamme.id}) }}">
			<button class="btn text-bg-accent-2 text-primary mx-3">
				<i class="fa-solid fa-pen"></i>
			</button>
		</a>

		{{ include('gamme/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
