{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<a href="{{ path('app_user_new') }}">Ajouter un utilisateur</a>
	<a href="{{ path('app_droit_index') }}">Voir les droits</a>

	<div class="list">
		{% for user in users %}
			<div class="user d-flex flex-row">
				<div class="d-flex flex-column space-between w-100">
					<div>
						<span>{{ user.nom }}
							{{ user.prenom }}</span>
						<span>{{ user.identifiant }}</span>
						<span>Qualifications:</span>
					</div>
					<div>
					<span>Droit:{{ user.Droit.libelle }}</span>
					</div>
				</div>
				<div class="d-flex">
					<a class="btn text-bg-accent-2" href="{{ path('app_user_show', {'id': user.id}) }}">
						<i class="fa-solid fa-eye"></i>
					</a>
					<a class="btn text-bg-accent-2" href="{{ path('app_user_edit', {'id': user.id}) }}">
						<i class="fa-solid fa-pen"></i>
					</a>
					{{ include('user/_delete_form.html.twig') }}
				</div>
			</div>
				<hr>
		{% else %}
			<tr>
				<td colspan="6">no records found</td>
			</tr>
		{% endfor %}
	</div>
{% endblock %}
