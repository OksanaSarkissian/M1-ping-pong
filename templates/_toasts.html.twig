<div class="d-flex space-between toast position-fixed top-0 end-0 me-3 mt-3 text-bg-{{ toastType }}" role="alert" aria-live="assertive" aria-atomic="true" {{ stimulus_controller('toast') }}>
  <div class="d-flex">
    <div class="toast-body">{{ toastMessage }}</div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>
