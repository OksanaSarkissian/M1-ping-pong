{% extends 'base.html.twig' %}

{% block title %}Fournisseur index
{% endblock %}

{% block body %}
	<div class="col-sm p-3 min-vh-100 d-flex flex-column align-items-center h-100 w-75">
		<div class="d-flex column-gap-5 pb-3">
			<a href="{{ path('app_devis_index') }}" class="btn bg-accent-2 text-primary">Devis</a>
			<a href="{{ path('app_commande_index') }}" class="btn bg-accent-2 text-primary">Commandes</a>
			<a href="{{ path('app_achat_index') }}" class="btn bg-accent-2 text-primary">Achats</a>
			<a href="{{ path('app_client_index') }}" class="btn bg-accent-2 text-primary">Clients</a>
			<a href="{{ path('app_fournisseur_index') }}" class="btn bg-accent text-secondary">Fournisseurs</a>
		</div>
		<div class="d-flex justify-content-between align-items-center w-100 mb-5 ">
			<a class="btn text-bg-accent-2 text-primary" href="{{ path('app_fournisseur_new') }}">Cr√©er un fournisseur</a>
			<h1>Fournisseurs</h1>
			<div class=""></div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Raison_sociale</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for fournisseur in fournisseurs %}
					<tr>
						<td>{{ fournisseur.id }}</td>
						<td>{{ fournisseur.raisonSociale }}</td>
						<td>
							<a href="{{ path('app_fournisseur_show', {'id': fournisseur.id}) }}">
								<button class="btn text-bg-accent-2 text-primary">
									<i class="fa-solid fa-eye"></i>
								</button>
							</a>
							<a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}">
								<button class="btn text-bg-accent-2 text-primary mx-3">
									<i class="fa-solid fa-pen"></i>
								</button>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
