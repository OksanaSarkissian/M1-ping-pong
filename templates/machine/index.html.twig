{% extends 'base.html.twig' %}

{% block title %}Machine index{% endblock %}

{% block body %}
    <h1>Machine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td>{{ machine.id }}</td>
                <td>{{ machine.libelle }}</td>
                <td>
                    <a href="{{ path('app_machine_show', {'id': machine.id}) }}"><button class="btn text-bg-accent-2 text-primary">
							<i class="fa-solid fa-eye"></i>
						</button></a>
                    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}"><button class="btn text-bg-accent-2 text-primary mx-3">
							<i class="fa-solid fa-pen"></i>
						</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_machine_new') }}">Create new</a>
{% endblock %}
